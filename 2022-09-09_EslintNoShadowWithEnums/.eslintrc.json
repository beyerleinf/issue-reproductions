{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "overrides": [
    {
      "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "rules": {
        "@typescript-eslint/no-shadow": ["error", { "ignoreTypeValueShadow": true }],
        "no-shadow": "off"
      },
      "plugins": ["@typescript-eslint"]
    }
  ]
}
